          <div class="w-full mt-6">
  <div class="overflow-x-auto">
    <table class="w-full border border-gray-300 rounded-lg shadow-sm">
      <thead class="bg-gray-100 text-gray-700 uppercase text-sm">
        <tr>
          <th class="px-6 py-3 text-left">Image</th>
          <th class="px-6 py-3 text-left">Order Id</th>
          <th class="px-6 py-3 text-left">Customer</th>
          <th class="px-6 py-3 text-left">Date</th>
          <th class="px-6 py-3 text-left">Payment</th>
          <th class="px-6 py-3 text-left">Status</th>
          <th class="px-6 py-3 text-right">Amount</th>
          <th class="px-6 py-3 text-right">Action</th> 
        </tr>
      </thead>

      <tbody class="text-gray-800 bg-white">
        <% if (orders && orders.length > 0) { %>

          <% orders.forEach(order => { %>

            <!-- âŒ Skip payment failed orders -->
            <% if (order.orderStatus === 'payment faild') { return; } %>

            <tr class="border-t hover:bg-gray-50 transition">
              
              <!-- ðŸ–¼ï¸ Product Image -->
              <td class="px-6 py-3">
                <% 
                  let img = order.products[0]?.productId?.images?.[0] 
                    || order.products[0]?.productId?.productPic?.[0] 
                    || order.products[0]?.productId?.image 
                    || "/images/default-product.jpg";
                %>
                <img src="<%= img %>" alt="Product Image" class="w-14 h-14 rounded object-cover border" />
              </td>

              <!-- ðŸ§¾ Order ID -->
              <td class="px-6 py-3 font-medium"><%= order.orderId %></td>

              <!-- ðŸ‘¤ Customer -->
              <td class="px-6 py-3">
                <%= order.userId?.name || order.shippingAddress?.firstName || "Unknown" %><br>
                <span class="text-sm text-gray-500"><%= order.userId?.email || "" %></span>
              </td>

              <!-- ðŸ“… Date -->
              <td class="px-6 py-3">
                <%= new Date(order.createdAt).toLocaleDateString() %>
              </td>

              <!-- ðŸ’³ Payment -->
              <td class="px-6 py-3">
                <%= order.paymentDetails?.method || "N/A" %>
              </td>

              <!-- ðŸšš Status -->
              <td class="px-6 py-3">
                <span class="
                  px-3 py-1 rounded text-sm font-semibold
                  <% if (order.orderStatus === 'Delivered') { %> 
                    bg-green-100 text-green-700 
                  <% } else if (order.orderStatus === 'Pending') { %> 
                    bg-yellow-100 text-yellow-700 
                  <% } else if (order.orderStatus === 'Cancelled') { %> 
                    bg-red-100 text-red-700 
                  <% } else { %> 
                    bg-gray-100 text-gray-700 
                  <% } %>">
                  <%= order.orderStatus %>
                </span>
              </td>

              <!-- ðŸ’° Total Amount -->
              <td class="px-6 py-3 text-right font-semibold">
                â‚¹<%= order.grandTotal?.toFixed(2) || "0.00" %>
              </td>

              <!-- ðŸ” Details Button -->
              <td class="px-6 py-3 text-right">
                <a href="/admin/singleOrder/<%= order._id %>" 
                   class="green-btn">
                   Detail
                </a>
              </td>

            </tr>

          <% }) %>

        <% } else { %>
          <tr>
            <td colspan="8" class="text-center text-gray-500 py-8 text-lg">
              No orders found.
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>




