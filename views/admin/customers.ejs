<script>


const form = document.getElementById("searchForm");
const searchInput = document.getElementById("searchInput");
const resultsTbody = document.getElementById("searchResults");
let timeout;

// ===== Form Submit =====
form.addEventListener("submit", (e) => {
  e.preventDefault();
  performSearch(searchInput.value.trim());
});

// ===== Live Search (Typing) =====
searchInput.addEventListener("input", () => {
  clearTimeout(timeout);
  const query = searchInput.value.trim();
  timeout = setTimeout(() => performSearch(query), 1500)
});

// ===== Reusable Search Function =====
async function performSearch(query) {
  if (query.length === 0) {
    window.location.reload(); // reset to full list
    return;
  }

  try {
    const res = await fetch(`/admin/customers/search?search=${encodeURIComponent(query)}`);
    const data = await res.json();

    if (data.success && data.users.length > 0) {
      let html = "";
      data.users.forEach(user => {
        html += `
          <tr class="border-b">
            <td class="py-3 px-6 text-left"><span class="text-gray-800">${user.firstName}</span></td>
            <td class="py-3 px-6 text-left">${user.email}</td>
            <td class="py-3 px-6 text-left">${user.phone || '-'}</td>
            <td class="py-3 px-6 text-left">
              <button class="px-3 py-1 rounded text-white ${user.isBlocked ? 'bg-green-500' : 'bg-red-500'}"
                      onclick="toggleBlock('${user._id}', this)">
                ${user.isBlocked ? 'Unblock' : 'Block'}
              </button>
            </td>
          </tr>`;
      });
      resultsTbody.innerHTML = html;
    } else {
      resultsTbody.innerHTML = "";
      // Swal.fire({
      //   icon: "error",
      //   title: "User not found",
      //   text: `No customers matched "${query}"`,
      // });
    }
  } catch (err) {
    console.error(err);
    Swal.fire({
      icon: "error",
      title: "Server error",
      text: "Please try again later."
    });
  }
}


const menuBtn = document.getElementById("menuBtn");
const sidebar = document.querySelector("aside");

menuBtn.onclick = () => {
  sidebar.classList.toggle("open");
};



async function toggleBlock(userId, btn) {
  const isBlocking = btn.textContent.trim() === "Block";

  const result = await Swal.fire({
    title: "Are you sure?",
    text: isBlocking
      ? "You are about to block this user."
      : "You are about to unblock this user.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonText: "Yes",
    cancelButtonText: "Cancel",
  });

  if (!result.isConfirmed) return;

  try {
    const res = await fetch(`/admin/users/block/${userId}`, {
      method: "PUT", 
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        action: isBlocking ? "block" : "unblock", 
      }),
    });

    const data = await res.json();

    if (data.success) {
      if (data.isBlocked) {
        btn.textContent = "Unblock";
        btn.classList.remove("bg-red-500");
        btn.classList.add("bg-green-500");

        Swal.fire({
          icon: "success",
          title: "User blocked!",
          timer: 1500,
          showConfirmButton: false,
        });
      } else {
        btn.textContent = "Block";
        btn.classList.remove("bg-green-500");
        btn.classList.add("bg-red-500");

        Swal.fire({
          icon: "success",
          title: "User unblocked!",
          timer: 1500,
          showConfirmButton: false,
        });
      }
    } else {
      Swal.fire("Error", data.message || "Something went wrong", "error");
    }
  } catch (err) {
    console.error(err);
    Swal.fire("Error", "Server error occurred.", "error");
  }
}



</script>










