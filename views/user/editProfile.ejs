<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    /* ==== Page Background ==== */
body {
  background: linear-gradient(to bottom right, #f0f4ff, #ffffff);
  font-family: 'Inter', sans-serif;
}

/* ==== Card Styling ==== */
.card {
  border-radius: 16px;
  padding: 25px;
  animation: fadeIn 0.4s ease;
  border: none;
}

.card-title {
  font-weight: 700;
  color: #1e293b;
}

/* ==== Input Styles ==== */
.form-control {
  border-radius: 10px;
  padding: 10px 14px;
  font-size: 15px;
  border: 1px solid #d1d5db;
  transition: 0.2s ease;
}

.form-control:focus {
  border-color: #2563eb;
  box-shadow: 0 0 0 0.15rem rgba(37, 99, 235, 0.25);
}

/* Disabled fields */
.form-control.bg-light {
  opacity: 0.9;
}

/* ==== Labels ==== */
.form-label {
  font-weight: 600;
  color: #334155;
}

/* ==== Buttons ==== */
.btn-primary {
  background-color: #2563eb;
  border-radius: 8px;
  padding: 10px 18px;
  border: none;
  font-weight: 600;
}

.btn-primary:hover {
  background-color: #1d4ed8;
}

.btn-link {
  font-weight: 600;
  text-decoration: none;
}

.btn-link:hover {
  text-decoration: underline;
}

/* Change Email Button */
.btn.btn-primary.mt-2 {
  background: #10b981;
  border: none;
}

.btn.btn-primary.mt-2:hover {
  background: #059669;
}

/* ==== Phone Error Text ==== */
#phoneError {
  font-weight: 500;
}

/* ==== Animation ==== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(12px); }
  to { opacity: 1; transform: translateY(0); }
}

/* ==== Container adjustments ==== */
.container {
  padding-bottom: 50px;
}

  </style>
</head>
<body class="bg-light">

<div class="container">
  <div class="card mx-auto mt-5 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Edit Profile</h1>

      <form id="editProfileForm" action="/edit-profile" method="POST" novalidate>

        <div class="mb-3">
          <label for="firstName" class="form-label">First Name</label>
          <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="secondName" class="form-label">Last Name</label>
          <input type="text" id="secondName" name="secondName" value="<%= user.secondName %>" class="form-control" required>
        </div>

        <!-- <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" value="<%= user.email %>" readonly class="form-control bg-light" disabled>
        </div> -->


        <div class="mb-3">
  <label class="form-label">Email</label>
  <input type="email" value="<%= user.email %>" readonly class="form-control bg-light" disabled>
  <!-- Button add panrom -->
  <a href="/change-mail" class="btn btn-primary mt-2">Change Email</a>
</div>




        <div class="mb-3">
          <label class="form-label">Referral Code</label>
          <input type="text" value="<%= user.referredBy ? user.referredBy : 'Not Referred' %>" readonly class="form-control bg-light" disabled>
        </div>

        <div class="mb-3">
          <label for="phone" class="form-label">Phone</label>
          <input type="text" id="phone" name="phone" value="<%= user.phone || '' %>" maxlength="10" class="form-control" required>
          <div id="phoneError" class="text-danger small mt-1 d-none">Phone must be exactly 10 digits</div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
          <a href="/profile" class="btn btn-link">&larr; Back to Profile</a>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>

      </form>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const form = document.getElementById("editProfileForm");
  const phoneInput = document.getElementById("phone");
  const phoneError = document.getElementById("phoneError");

  form.addEventListener("submit", async function (e) {
    e.preventDefault();

    const firstName = document.getElementById("firstName").value.trim();
    const secondName = document.getElementById("secondName").value.trim();
    const phone = document.getElementById("phone").value.trim();

    if (firstName === "" || secondName === "") {
      Swal.fire("", "Fields cannot be empty", "error");
      return;
    }

    if (!/^\d{10}$/.test(phone)) {
      phoneError.textContent = "Phone must be exactly 10 digits";
      phoneError.classList.remove("d-none");
      return;
    } else {
      phoneError.classList.add("d-none");
    }

    const response = await fetch("/edit-profile", {
      method: "POST",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        firstName,
        secondName,
        phone
      })
    });

    const result = await response.json();

    if (!result.success) {
      phoneError.textContent = result.msg;
      phoneError.classList.remove("d-none");

      Swal.fire({
        icon: "error",
        title: "Update Failed",
        text: result.msg,
      });

      return;
    }

    Swal.fire({
      icon: "success",
      title: "Profile Updated!",
      text: "Your details have been saved.",
      timer: 1500,
      showConfirmButton: false
    }).then(() => {
      window.location.href = "/profile";
    });
  });
</script>





</body>
</html>
