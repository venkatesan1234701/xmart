<style>

/* ================================
   GLOBAL PAGE LOOK
================================ */
body {
  background: #f9fafb;
  font-family: "Inter", sans-serif;
  overflow-x: hidden;
}

/* Page container spacing */
.validation-form {
  padding: 20px;
}

/* ================================
   LEFT SIDE IMAGE
================================ */
.sign-in-image img {
  max-width: 100%;
  height: auto;
  filter: drop-shadow(0px 6px 14px rgba(0,0,0,0.15));
  animation: fade-in 0.6s ease;
}

/* Fade animation */
@keyframes fade-in {
  from { opacity: 0; transform: translateY(8px); }
  to { opacity: 1; transform: translateY(0); }
}

/* ================================
   SIGN-UP CONTENT CARD
================================ */
.sign-up-content {
  background: #ffffff;
  padding: 35px 40px;
  border-radius: 18px;
  box-shadow: 0px 10px 24px rgba(0,0,0,0.08);
  transition: 0.3s ease;
}

.sign-up-content:hover {
  transform: translateY(-3px);
}

/* Headings */
.sign-up-content h2 {
  font-size: 26px;
  font-weight: 700;
  color: #111827;
}

.sign-up-content p {
  font-size: 14px;
  color: #6b7280;
}

/* ================================
   FORM INPUTS
================================ */
.form-control {
  padding: 14px;
  border-radius: 10px;
  border: 1px solid #d1d5db;
  transition: 0.25s;
}

.form-control:focus {
  border-color: #16a34a;
  box-shadow: 0 0 0 3px rgba(22,163,74,0.25);
}

/* ================================
   PASSWORD FIELD
================================ */
#password {
  padding-right: 40px !important;
}

#togglePassword {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 18px;
  opacity: 0.6;
  transition: 0.2s ease;
}

#togglePassword:hover {
  opacity: 1;
}

/* ================================
   ERROR TEXT
================================ */
.error-style {
  font-size: 13px;
  margin-top: 4px;
  color: #dc2626 !important;
}

/* ================================
   SIGN UP BUTTON
================================ */
button.btn-success {
  padding: 12px;
  font-size: 17px;
  font-weight: 600;
  border-radius: 10px;
  transition: 0.3s ease;
}

button.btn-success:hover {
  background: #15803d !important;
  transform: translateY(-3px);
  box-shadow: 0 6px 14px rgba(22,163,74,0.35);
}

/* ================================
   GOOGLE SIGNUP BUTTON
================================ */
button.btn-outline-danger {
  border-width: 2px;
  padding: 12px;
  border-radius: 10px;
  font-weight: 600;
  transition: 0.3s;
}

button.btn-outline-danger:hover {
  background: #fee2e2;
  border-color: #b91c1c;
  color: #b91c1c;
}

/* Google Icon */
.google-icon {
  width: 20px;
  height: 20px;
}

/* ================================
   RESPONSIVE SUPPORT
================================ */
@media(max-width: 992px) {
  .sign-up-content {
    margin-top: 25px;
    padding: 25px 20px;
  }

  h2 {
    font-size: 22px !important;
  }
}

@media(max-width: 576px) {
  .sign-up-content {
    border-radius: 14px;
  }
}

</style>



