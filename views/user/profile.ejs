    justify-content: center;
    gap: 8px !important;
  }

  .navbar-nav .nav-link {
    font-size: 0.85rem;
    padding: 4px 6px;
  }

  .navbar form,
  .navbar .btn {
    width: 100%;
    margin-top: 5px;
  }

  /* Profile card spacing */
  .container {
    padding-left: 12px;
    padding-right: 12px;
  }

  .card {
    border-radius: 12px;
  }

  .card-title {
    font-size: 1.3rem;
  }

