    width: 110px !important;
    height: 110px !important;
  }

  /* Stack profile section */
  .card-body .row.align-items-center {
    flex-direction: column;
    text-align: center;
  }

  .card-body .col-md-4,
  .card-body .col-md-8 {
    width: 100%;
  }

  /* Inputs */
  .form-control {
    font-size: 0.85rem;
    padding: 8px 10px;
  }

  /* Action buttons */
  .text-center .btn {
    width: 100%;
    margin-bottom: 8px;
  }

  /* Saved addresses */
  h4 {
    font-size: 1.1rem;
  }

  #addresses-container .card {
    font-size: 0.85rem;
  }

  #addresses-container .btn {
    width: 100%;
    margin-bottom: 6px;
  }
}


