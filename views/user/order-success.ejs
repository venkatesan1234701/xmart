<style>
  /* ==================================================
   MOBILE RESPONSIVE FIX â€“ ORDER SUCCESS PAGE
   Target: Phones (â‰¤ 576px)
================================================== */
@media (max-width: 576px) {

  html {
    font-size: 16px;
  }

  body {
    font-size: 0.95rem;
    padding: 16px;
    -webkit-text-size-adjust: 100%;
  }

  /* -------- Success Card -------- */
  .success-card {
    max-width: 100%;
    padding: 1.5rem;
    border-radius: 14px;
  }

  /* Success icon */
  .success-card .rounded-circle {
    width: 56px !important;
    height: 56px !important;
  }

  .success-card svg {
    width: 32px;
    height: 32px;
  }

  /* -------- Headings -------- */
  .success-card h1 {
    font-size: 1.4rem;
  }

  /* -------- Order text -------- */
  .success-card p {
    font-size: 0.9rem;
  }

  /* -------- Address block -------- */
  .success-card .text-start {
    font-size: 0.85rem;
  }

  /* -------- Button -------- */
  .success-card .btn {
    width: 100%;
    font-size: 0.95rem;
    padding: 10px;
  }

  /* -------- SweetAlert popup -------- */
  .swal2-popup {
    width: 90% !important;
    font-size: 0.9rem;
    border-radius: 14px !important;
  }
}

    body {
      background-color: #f9fafb;
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .success-card {
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      text-align: center;
      max-width: 450px;
      width: 100%;
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style> 


</head>
<body>

  <div class="success-card">
    <div class="d-flex justify-content-center mb-4">
      <div class="bg-success bg-opacity-10 text-success d-flex align-items-center justify-content-center rounded-circle" style="width: 64px; height: 64px;">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" width="40" height="40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
    </div>

    <h1 class="fw-bold text-success mb-3">Order Placed Successfully!</h1>

    <p class="text-secondary mb-2">Order ID: <strong><%= orderId %></strong></p>
    <p class="text-secondary mb-2">Payment Method: <strong><%= paymentMethod %></strong></p>
    <p class="text-secondary mb-4">Total: <strong>â‚¹<%= grandTotal %></strong></p>

    <div class="text-start border-top pt-3">
      <h5 class="fw-semibold text-dark mb-2">Shipping Address</h5>
      <p class="text-muted small mb-0">
        <%= address.firstName %><br>
        <%= address.addressLine1 %><br>
        <% if (address.addressLine2) { %><%= address.addressLine2 %><br><% } %>
        <%= address.city %>, <%= address.state %> - <%= address.zipCode %><br>
        <%= address.country %>
      </p>
    </div>

    <a href="/orders" 
       class="btn btn-success mt-4 px-4 py-2 shadow-sm">
      View My Orders
    </a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Prevent back navigation
    window.addEventListener("popstate", function () {
      window.location.href = "/card";
    });
    window.history.pushState({}, "");

    // SweetAlert2 centered popup (not fullscreen)
    document.addEventListener("DOMContentLoaded", () => {
      Swal.fire({
        title: "ðŸŽ‰ Order Confirmed!",
        text: "Your order was placed successfully.",
        icon: "success",
        confirmButtonText: "Awesome!",
        confirmButtonColor: "#16a34a",
        background: "#ffffff",
        color: "#333333",
        width: "350px",
        padding: "1.5em",
        backdrop: "rgba(0,0,0,0.4)",
      });
    });
  </script>

</body>
</html>
