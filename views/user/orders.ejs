    </thead>

    <tbody>
      <% orders.forEach((order, index) => { 
        const firstProduct = order.products[0];
        const firstProductData = firstProduct?.productId;
        const imgToShow =
          firstProductData?.productPic?.[0] ||
          firstProductData?.images?.[0] ||
          firstProductData?.image ||
