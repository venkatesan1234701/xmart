  border-radius: 14px 14px 0 0 !important;
  padding: 18px 20px;
}

.modal-body p {
  margin: 6px 0;
}

#modalProducts > div {
  border-radius: 10px !important;
  transition: 0.25s ease;
}

#modalProducts > div:hover {
  background: #f8faff;
  transform: scale(1.01);
