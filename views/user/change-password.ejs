      <!-- FORM -->
      <form id="changePasswordForm" class="flex flex-col gap-5">

        <!-- Current Password -->
        <div class="flex flex-col gap-1">
          <label class="text-gray-700">Current Password</label>

          <div class="relative">
            <input 
              type="password"
