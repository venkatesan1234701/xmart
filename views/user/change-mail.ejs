<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
const sendOtpBtn = document.getElementById("sendOtpBtn");
const verifyOtpBtn = document.getElementById("verifyOtpBtn");
const otpSection = document.getElementById("otpSection");
const newEmailInput = document.getElementById("newEmail");

let otpCooldown = false;

// SEND OTP
sendOtpBtn.addEventListener("click", async () => {
  if (otpCooldown) return;

  const newEmail = newEmailInput.value.trim();
  if (!newEmail) return Swal.fire("Error!", "Enter a new email", "error");

  // disable button and start cooldown
  sendOtpBtn.disabled = true;
  sendOtpBtn.classList.add("opacity-50", "cursor-not-allowed");
  otpCooldown = true;

  const res = await fetch("/user/send-otp", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ newEmail })
  });

  const data = await res.json();

  if (data.success) {
    Swal.fire("Success!", data.message, "success");
    otpSection.style.display = "block";

    // 70s cooldown
    let timeLeft = 70;
    sendOtpBtn.textContent = `Send OTP (${timeLeft}s)`;

    const timer = setInterval(() => {
      timeLeft--;
      sendOtpBtn.textContent = `Send OTP (${timeLeft}s)`;

      if (timeLeft <= 0) {
        clearInterval(timer);
        sendOtpBtn.disabled = false;
        sendOtpBtn.classList.remove("opacity-50", "cursor-not-allowed");
        sendOtpBtn.textContent = "Send OTP";
        otpCooldown = false;
      }
    }, 1000);

  } else {
    Swal.fire("Error!", data.message, "error");
    sendOtpBtn.disabled = false;
    sendOtpBtn.classList.remove("opacity-50", "cursor-not-allowed");
    otpCooldown = false;
  }
});


// VERIFY OTP  (FIXED)
verifyOtpBtn.addEventListener("click", async () => {
  const otp = document.getElementById("otpInput").value.trim();
  if (!otp) return Swal.fire("Error!", "Please enter OTP", "error");

  const res = await fetch("/user/verify-mailotp", {   // FIXED!!!
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ otp })
  });

  const data = await res.json();

  if (data.success) {
    Swal.fire("Success!", data.message, "success").then(() => {
      otpSection.style.display = "none";
      newEmailInput.value = "";
      newEmailInput.placeholder = data.email;
      window.location.href = "/user/profile";
    });
  } else {
    Swal.fire("Error!", data.message, "error");
  }
});
</script>



